<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(vacancy) -%>">
  <span class='title'>
    <%= vacancy.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.vacancies_vacancy_path(vacancy),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_vacancies_admin_vacancy_path(vacancy),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.vacancies_admin_vacancy_path(vacancy),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => vacancy.title),
        :method => :delete %>
  </span>
</li>
