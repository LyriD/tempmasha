<% content_for :body_content_title do %>
  <%= @vacancy.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @vacancy.title %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @vacancy.body %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="vacancies">
      <% @vacancies.each do |vacancy| %>
        <li>
          <%= link_to vacancy.title, refinery.vacancies_vacancy_path(vacancy) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
