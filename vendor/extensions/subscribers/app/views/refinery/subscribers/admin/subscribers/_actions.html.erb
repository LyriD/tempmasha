<ul>
  <% if ::Refinery::Subscribers::Admin::SubscribersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.subscribers_admin_subscribers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_subscribers_admin_subscriber_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Subscribers::Admin::SubscribersController.sortable? && ::Refinery::Subscribers::Subscriber.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Subscribers"),
                 refinery.subscribers_admin_subscribers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Subscribers"),
                 refinery.subscribers_admin_subscribers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
