<%= form_for [refinery, :subscribers_admin, @subscriber] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @subscriber,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.subscribers.admin.subscribers.subscriber'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @subscriber.email) -%>
<% end -%>
