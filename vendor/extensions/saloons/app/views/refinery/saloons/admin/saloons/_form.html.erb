<%= form_for [refinery, :saloons_admin, @saloon] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @saloon,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:body],
                :object => "saloons/saloon" -%>
  </div>

    <div class='field'>
      <div class='page_part' id="images">
        <%= render partial: 'refinery/admin/pages/tabs/images', locals: {f: f} %>
      </div>
    </div>

  <div class='field'>
    <%= f.label :metro -%>
    <%= f.text_field :metro -%>
  </div>
    <div class='field'>
    <%= f.label :adress -%>
    <%= f.text_field :adress -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :time -%>
    <%= f.text_field :time -%>
  </div>

  <div class='field'>
    <%= f.label :map -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :map_id,
               :image => @saloon.map,
               :toggle_image_display => false -%>
  </div>
    <div class='field'>
      <%= f.label :map_url -%>
      <%= f.text_field :map_url -%>
    </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.saloons.admin.saloons.saloon'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @saloon.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
